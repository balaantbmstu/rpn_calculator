{
	"version": "2.0.0",
	 "tasks": [
        {
		"label": "Build with CMake",
		"type": "shell",
		"command": "cmake",
		"args": ["--build", ".", "--config", "${input:configurationName}", "--target", "all"],
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"problemMatcher": "$msCompile"
	}
    ],
    "inputs": [
        {
            "id": "configurationName",
            "type": "promptString",
            "description": "Choose the configuration to use.",
            "default": "Debug"
        }
    ]
}